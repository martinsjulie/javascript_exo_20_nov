  <script language='javascript'>

    var age=window.prompt('What is your age?');
    if (age<30){
        window.alert('Your are '+ (30-age) + ' years before you 30');
    }else if (age>30) {
      window.alert('You have been 30 since' + (age-30)+' years ago');
    }else{
      window.alert('You are 30')
    }

